%h1 New timesheet
= simple_form_for(@timesheet, :url => client_project_timesheet_path(@project.client_id, @project.id, @timesheet.id)) do |f|
  = f.error_notification
  .inputs
    = f.input :user_id, collection: @users, as: :select, label_method: :email, value_method: :id, label: "User", include_blank: false
    = f.input :project_id, as: :hidden, :input_html => {value: @project.id}
    = f.input :start_date
    = f.input :end_date

  .actions
    = f.button :submit
= link_to 'Back', client_project_timesheets_path